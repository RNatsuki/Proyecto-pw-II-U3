<main class="p-6 bg-gray-100 min-h-screen">
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6">Editando Juego {{game.title}} (ID: {{game.id}})</h1>
        <form>
            <!-- Título del juego -->
            <div class="mb-4">
                <label for="title" class="block text-gray-700 font-bold mb-2">Título del Juego</label>
                <input
                    type="text"
                    id="title"
                    name="title"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Ingresa el título del juego"
                    value="{{game.title}}"
                />
            </div>

            <!-- Descripción -->
            <div class="mb-4">
                <label for="description" class="block text-gray-700 font-bold mb-2">Descripción</label>
                <textarea
                    id="description"
                    name="description"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Describe el juego"
                    rows="4"
                >{{game.description}}</textarea>
            </div>

            <!-- Categoría -->
            <div class="mb-4">
                <label for="category" class="block text-gray-700 font-bold mb-2">Categoría</label>
                <textarea
                    id="description"
                    name="description"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Describe el juego"
                    rows="4"
                >{{game.tags}}</textarea>

            <!-- Botones -->
            <div class="flex justify-end space-x-4">
                <button
                    onclick="() =>{

                    }"
                    type="button"
                    class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500"
                >
                    Cancelar
                </button>
                <button
                    type="submit"
                    class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</main>


<style>
    input, textarea {
        color: #000;
    }
</style>
