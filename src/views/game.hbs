<main class="bg-gray-900 text-white">
  {{> header}}

  <div class="container mx-auto p-4">
    <div class="flex flex-col lg:flex-row lg:space-x-8 mb-8">
      <div class="lg:w-1/3">
        <img
          src="/public/images/{{game.img}}"
          alt="Game Thumbnail"
          class="rounded-lg shadow-lg object-cover object-center mb-4 transform transition-transform duration-300 hover:scale-105"
        />
      </div>
      <div class="lg:w-2/3">
        <h1 class="text-4xl font-bold mb-4">{{game.title}}</h1>
        <p class="text-gray-400 mb-2">Release Date: January 1, 2022</p>
        <h2 class="text-2xl font-bold mt-4">Description</h2>
        <p class="mt-2">{{game.description}}</p>
        <a
          href="/public/games/{{game.fileName}}"
          class="mt-4 inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-300"
        >
          Descargar Juego
        </a>
      </div>
    </div>

    <!-- Nueva secciÃ³n de Juegos Recomendados -->
    <h2 class="text-3xl font-bold mb-4">Juegos Recomendados</h2>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
    >
      {{#each relatedGames}}
        <div
          onclick="window.location.href = '/game/{{this.id}}'"
          class="bg-gray-800 rounded-lg p-4 transition transform duration-300 hover:scale-105"
        >
          <img
            src="/public/images/{{this.img}}"
            class="rounded-lg mb-2 w-full h-48 object-cover"
          />
          <h3 class="text-xl font-bold">{{this.title}}</h3>
          <p class="text-gray-400">{{this.description}}</p>
        </div>
      {{/each}}
    </div>
  </div>
</main>
